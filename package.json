{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/**",
    "webclient"
  ],
  "scripts": {
    "export": "poetry export -f requirements.txt > requirements.txt",
    "build:webclient": "yarn workspace webclient build",
    "build:docker": "sudo docker build . minigest",
    "docker:compose": "sudo docker-compose up -d --build",
    "bump": "cz bump --changelog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1"
  }
}
