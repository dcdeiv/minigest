{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/**",
    "webclient"
  ],
  "scripts": {
    "runserver": "poetry run python manage.py runserver",
    "bump": "cz bump --changelog",
    "export": "poetry export -f requirements.txt > requirements.txt",
    "makemigrations": "poetry run python manage.py makemigrations",
    "build:webclient": "yarn workspace webclient build",
    "collectclient": "poetry run collectclient",
    "collectstatic": "poetry run python manage.py collectstatic --no-input",
    "build:step-1": "yarn run export && yarn run makemigrations",
    "build:step-2": "yarn run build:webclient && yarn run collectclient",
    "build": "yarn run build:step-1 && yarn run build:step-2",
    "build:push": "yarn build && git add -A && git commit -m 'build: build automatica' && git push",
    "build:dev": "yarn run build && yarn run collectstatic",
    "docker:build": "sudo docker build -t dcdeiv/minigest:latest .",
    "docker:compose": "sudo docker-compose up -d",
    "docker:compose:build": "sudo docker-compose up -d --build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1"
  }
}
